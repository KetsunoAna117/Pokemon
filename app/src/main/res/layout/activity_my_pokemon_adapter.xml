<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MyPokemonAdapter"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/mypokemon_sprite"
        android:layout_width="160dp"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypokemon_level"
            android:text="Lv."
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypokemon_name"
            android:text="Pokemon Name"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypokemon_type"
            android:text="Pokemon Type"
         />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypokemon_hp"
            android:text="Pokemon HP"
            />
        
        <ProgressBar
            android:id="@+id/mypokemon_hp_hpbar"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:scaleY="2"
            android:minHeight="20sp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mypokemon_attack"
            android:text="Pokemon Attack"
            />

        <Button
            android:id="@+id/mypokemon_switchToActive_btn"
            android:layout_width="wrap_content"
            android:text="Switch to active"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>


</LinearLayout>