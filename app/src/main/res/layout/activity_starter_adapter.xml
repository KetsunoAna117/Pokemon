<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StarterAdapter">

    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/starter_sprite"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/starter_level"
                android:text="Lv."
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/starter_name"
                android:text="Pokemon Name"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/starter_type"
                android:text="Pokemon Type"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/starter_attack"
                android:text="Pokemon Attack"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>